<section class="mt-5">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5"><%=t("general.sign_in")%></h3>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

            <div data-mdb-input-init class="form-outline mb-4">
              <%= form.email_field :email, class: "form-control form-control-lg", placeholder: I18n.t("general.placeholder.email") %>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <%= form.password_field :password, class: "form-control form-control-lg", placeholder: I18n.t("general.placeholder.password") %>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="form-check d-flex justify-content-start mb-4">
              <%= form.check_box :remember_me, class: "form-check-input" %>
              <%= form.label I18n.t("general.remember_me"), class: "form-check-label" %>
            </div>
            <% end %>

            <%= form.submit t("general.sign_in"), class: "btn btn-primary btn-lg btn-block" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
