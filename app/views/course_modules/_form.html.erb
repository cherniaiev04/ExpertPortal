<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4"><%= t("course_modules.edit_course_modules") %></h2>
          <%= form_with(model: course_module) do |form| %>
            <% if course_module.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= t("general.errors.something_wrong") %></h4>
                <ul>
                  <% course_module.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="my-4">
              <%= form.label :name, t("general.name"), style: "display: block;" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="d-flex justify-content-between mt-4">
              <%= link_to t("general.cancel"), course_modules_path, class: "btn btn-back border" %>
              <%= form.submit t("general.save"), class: "btn btn-create" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
