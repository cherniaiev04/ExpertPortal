<div class="container-fluid mt-5">
  <div class="row justify-content-center">
    <% content_for :title, I18n.t("categories.categories") %>
    <div class="col-lg-8 col-md-12">
      <div class="row justify-content-between align-items-center">
        <div class="col-lg-4 col-md-12">
          <h1><%= t("categories.categories")%></h1>
        </div>
        <div class="col-lg-4 col-md-6 text-md-end">
          <%= link_to new_category_path, class: "btn btn-create border" do %>
            <i class="fas fa-plus"></i> <%= I18n.t("categories.new_category")%>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-8 col-md-12" id="categories">
      <% @categories.each do |category| %>
        <div class="card shadow my-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <%= render category %>
            </div>
            <div class="d-flex justify-content-end">
              <%= link_to edit_category_path(category), class: "btn btn-edit me-2" do %>
                <i class="fa-solid fa-pen-to-square"></i> <%= I18n.t("general.change") %>
              <% end %>
              <%= button_to category, method: :delete, class: "btn btn-delete" do %>
                <i class="fa-solid fa-trash"></i> <%= I18n.t("general.delete") %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <hr class="my-5">
    <div class="col-lg-8 col-md-12 my-2">
      <h3><%= t("general.archived") %></h3>
    </div>
    <div class="col-lg-8 col-md-12">
      <% @categories_inactive.each do |category| %>
        <div class="card shadow my-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <%= render category %>
            </div>
            <div class="d-flex justify-content-end">
              <%= link_to I18n.t("general.change"), edit_category_path(category), class: "btn btn-primary me-2" %>
              <%= button_to t("general.delete"), category, method: :delete, data: { category_id: category.id }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
