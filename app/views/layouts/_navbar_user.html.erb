<nav class="navbar navbar-light bg-light">
  <a>
      <%= image_tag "fiti_logo_full.png", alt: "Company Logo", class: "ms-3", style: "width: auto; height: 80px; " %>
  </a>
    <% if user_signed_in? %>
    <div class="d-flex justify-content-center flex-grow-1">
      <ul class="navbar-nav d-flex flex-row">
        <li class="nav-item mx-5">
          <%= link_to I18n.t("navbar.projects_menu"), "/projects", class: "nav-link text-primary fw-medium text-uppercase fs-5" %>
        </li>
        <li class="nav-item mx-5">
          <%= link_to I18n.t("navbar.experts_menu"), experts_path, class: "nav-link fw-medium text-uppercase text-primary fs-5" %>
        </li>
      </ul>
    </div>
    <div class="d-flex align-items-center">
      <div class="text-center mr-3 mt-3">
        <%= link_to categories_path, style: "text-decoration: none;" do %>
          <i class="fa-solid fa-folder" style="font-size: 2rem;"></i>
          <br>
          <p class="text-black" style="font-size: 0.8rem;"><%= I18n.t("categories.categories")%></p>
        <% end %>
      </div>
      <div class="mr-3 text-right">
        <span class="badge bg-secondary"><%= I18n.t("navbar.user_role")%></span>
        <div><small><%= current_user.email %></small></div>
      </div>
      <div class="mr-3">
        <% if user_signed_in? %>
          <%= form_with url: destroy_user_session_path, method: :delete, local: true do %>
            <button type="submit" class="btn btn-outline-secondary d-flex align-items-center p-2">
              <i class="fa-solid fa-arrow-right-from-bracket fa-2x" aria-label="<%= t('general.sign_out') %>"></i> <!-- Added fa-2x for bigger icon -->
            </button>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</nav>
